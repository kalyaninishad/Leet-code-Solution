#include <stdio.h>
#include <stdbool.h>
#include <string.h>

bool isValid(char *s) {
    char stack[10000];
    int top = -1;

    for (int i = 0; s[i] != '\0'; i++) {
        char c = s[i];

        // If it's an opening bracket, push to stack
        if (c == '(' || c == '{' || c == '[') {
            stack[++top] = c;
        } 
        // If it's a closing bracket
        else {
            if (top == -1)  // nothing to match
                return false;

            char topChar = stack[top--];  // pop the top

            // Check if it matches the correct opening bracket
            if ((c == ')' && topChar != '(') ||
                (c == '}' && topChar != '{') ||
                (c == ']' && topChar != '[')) {
                return false;
            }
        }
    }

    // After processing all, stack should be empty
    return top == -1;
}


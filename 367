#include <stdio.h>
#include <stdbool.h>

bool isPerfectSquare(int num) {
    long long low = 1;
    long long high = num;

    while (low <= high) {
        long long mid = low + (high - low) / 2;
        long long square = mid * mid;

        if (square == num) {
            return true; // found perfect square
        } else if (square < num) {
            low = mid + 1;
        } else {
            high = mid - 1;
        }
    }

    return false; // not a perfect square
}

